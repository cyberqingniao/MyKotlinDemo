<?xml version="1.0" encoding="utf-8"?><!--  每个节点都支持两个属性：name+path  -->
<!--  path：需要临时授权访问的路径（.代表所有路径）  -->
<!--  name：就是你给这个访问路径起个名字  -->
<paths>
    <!--    //context.getFilesDir()  -->
    <files-path
        name="files"
        path="." />
    <!--    //context.getCacheDir()-->
    <cache-path
        name="cache"
        path="." />
    <!--    //Environment.getExternalStorageDirectory()-->
    <external-path
        name="external"
        path="MyKotlinDemo" />
    <!--    //context.getExternalFilesDirs()-->
    <external-files-path
        name="name"
        path="MyKotlinDemo" />
    <!--    //getExternalCacheDirs()-->
    <external-cache-path
        name="name"
        path="MyKotlinDemo" />
</paths>