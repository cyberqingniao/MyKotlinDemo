<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="forgetPasswordViewModel"
            type="com.yjp.mydemo.ui.forgetPassword.ForgetPasswordViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/c_title">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:src="@mipmap/arrow_white_back"
                binding:onClickCommand="@{forgetPasswordViewModel.backOnClickCommand}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="忘记密码"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@null"
				android:singleLine="true"
				android:phoneNumber="true"
                android:hint="手机号"
                android:padding="@dimen/dp_15"
                android:text="@={forgetPasswordViewModel.phone}"
                android:textColor="@color/c_33"
                android:textColorHint="@color/c_B2"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@drawable/btn_confirm_selector"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="@{forgetPasswordViewModel.codeTxt}"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                binding:onClickCommand="@{forgetPasswordViewModel.getCodeOncClickCommand}" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            android:background="@color/c_line" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="验证码"
			android:singleLine="true"
			android:inputType="number"
            android:padding="@dimen/dp_15"
            android:text="@={forgetPasswordViewModel.code}"
            android:textColor="@color/c_33"
            android:textColorHint="@color/c_B2"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            android:background="@color/c_line" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="密码"
			android:singleLine="true"
			android:inputType="textPassword"
            android:padding="@dimen/dp_15"
            android:text="@{forgetPasswordViewModel.password}"
            android:textColor="@color/c_33"
            android:textColorHint="@color/c_B2"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            android:background="@color/c_line" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="确认密码"
			android:singleLine="true"
			android:inputType="textPassword"
            android:padding="@dimen/dp_15"
            android:text="@{forgetPasswordViewModel.password1}"
            android:textColor="@color/c_33"
            android:textColorHint="@color/c_B2"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            android:background="@color/c_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@drawable/btn_confirm_selector"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            binding:onClickCommand="@{forgetPasswordViewModel.reportOnClickCommand}" />
    </LinearLayout>
</layout>